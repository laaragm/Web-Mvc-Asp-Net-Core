@model WebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this Seller?</h4>

<div>
    <h5>Seller Info</h5>
    <hr />
    <!-- This is going to list the elements of the object -->
    <dl class="dl-horizontal">
        <!-- In order to show the field's name -->
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <!-- In order to show the field's value -->
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
    </dl>

    <!-- Form to cancel the action or delete the specified seller -->
    <form asp-action="Delete">
        <!--Specifies the code of the seller which is going to be removed -->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>

